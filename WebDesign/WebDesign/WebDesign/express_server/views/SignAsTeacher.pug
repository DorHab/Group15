doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="style.css")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    title Sign AS teacher

  body
    include includes/Header
    .wrapper
      .form-box
        form(action="SignAsTeach", method="post")
          h2 Sign as a Teacher
          .input-box
            input(type="email", name="SP_Email", placeholder="Email", id="Email", required)
          .input-box
            input(onkeydown="return /[a-z]/i.test(event.key)", name="FirstName", placeholder="First name", id="FirstName", required)
          .input-box
            input(onkeydown="return /[a-z]/i.test(event.key)", name="LastName", placeholder="Last name", id="LastName", required)
          .input-box
            input(type="number", name="Age", placeholder="Age", min="1", id="Age", required)
          .input-box
            input(type="number", name="Price", placeholder="Price", min="0", id="Price", required)
          .input-box
            input(type="password", name="SP_Password", placeholder="Enter Password", id="Password", required)
          .SelectBtn
            .Select-box
              select(name="Location" required)
                  option(value="") Chose Location
                  option(value="South") South
                  option(value="North") North
                  option(value="West") West
                  option(value="East") East
                  option(value="AnyWhere") Any Where
            .Select-box
              select(name="ChoseGender" required)
                option(value="") Chose Gender
                option(value="Male") Male
                option(value="Female") Female
            .Select-box
              select(name="ChoseStatus" required)
                option(value="") Chose Status
                option(value="high school graduate") High school graduate
                option(value="1st degree") 1st degree
                option(value="above 1st degree") above 1st degree
            .Select-box
              select(name="ChooseHowToTeach" required)
                  option(value="") Chose Class
                  option(value="Zoom") Zoom
                  option(value="Frontal") Frontal
                  option(value="Both") Both
          .checkbox-topics
            h3 Chose Topics:
            label
              input(type="checkbox", name="Math3units")
              | Math 3 units
            label
              input(type="checkbox", name="Math4units")
              | Math 4 units
            label
              input(type="checkbox", name="Math5units")
              | Math 5 units
            label
              input(type="checkbox", name="English3units")
              | English 3 units
            label
              input(type="checkbox", name="English4units")
              | English 4 units
            label
              input(type="checkbox", name="English5units")
              | English 5 units
            label
              input(type="checkbox", name="Physics")
              | Physics
          button.btn(type="submit") Sign-up as Teacher
  include includes/Footer
